#include <stdio.h>

/*
	Atividades do livro de Algoritmos e lógica de programação II. 
	Linguagem C
	Capítulo 01
	Exercício 04
	Programa que recebe quatro números inteiros e calcula a média aritmética entre eles. 
*/

main(){
	
	float n1, n2, n3, n4, media;
		
	printf("\nDigite o primeiro numero: ");
	scanf("%f", &n1);
	printf("\nDigite o segundo numero: ");
	scanf("%f", &n2);
	printf("\nDigite o terceiro numero: ");
	scanf("%f", &n3);
	printf("\nDigite o quarto numero: ");
	scanf("%f", &n4);
	
	media = (n1 + n2 + n3 + n4)/4;
	
	printf("\nA media entre os numeros %.0f, %.0f, %.0f e %.0f eh %.2f", n1, n2, n3, n4, media);
	
	return (0);
}
